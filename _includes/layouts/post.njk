---
layout: layouts/base.njk
templateClass: article
---
<article>
<header>
    <h1>{{ title }}</h1>
    <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
 

{%- for tag in tags | filterTagList -%}
{%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
<a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
{%- endfor %}

</header>
{{ content | safe }}
  
{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
</article>

<svg viewBox="0 0 50 30" style=" width:9em; height:4em; display:block; margin: 2em auto"  class="sig"><path fill="none" stroke="var(--neutral)" stroke-linecap="round" stroke-linejoin="round" d="M4 13q23 0 34-3M1 22q2 0 6-7Q13.9 2 17 2c4 0-10 26-3 20C26 10 30-3 23 5s-2 18-5 21-6 2-2-2l9-9s-5 11-1 7S33 7 35 5c-16 26-1 9 3 9s-3 4-5 6 2-1 3 0-6 4-6 7 11-9 19-9"/></svg>

<div class="docnav">
{%- if previousPost %} <a href="{{ previousPost.url | url }}">Previous: {{ previousPost.data.title }}</a>{% endif %}

{%- if nextPost %}  <a href="{{ nextPost.url | url }}"> Next: {{ nextPost.data.title }}</a> {% endif %}
</div>
 
{%- endif %}

